@using System.Globalization
@model IEnumerable<Product>

<section class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center ">
    <div id="ankaXCarousel" class="carousel carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#ankaXCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#ankaXCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#ankaXCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="2000">
                <img src="~/images/product/ankax.png" class="d-block w-100" alt="Slide 1">
                <div class="carousel-caption d-none d-md-block"></div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/images/product/Home (1).png" class="d-block w-100" alt="Slide 2">
                <div class="carousel-caption d-none d-md-block">
                    
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="~/images/product/launching.png" class="d-block w-100" alt="Slide 3">
                <div class="carousel-caption d-none d-md-block"></div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#ankaXCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#ankaXCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>


<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow  border-top border-5 rounded"> 
                       
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                        
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary opacity-90 text-uppercase text-center">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.SiteAge</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    MonthlyNetProfit:
                                    <span class="text-decoration">
                                        @product.MonthlyNetProfit.ToString("c", new CultureInfo("en-US"))
                                    </span>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-secondary text-75 text-center">
                                    Asking Price (Classified):
                                    <span>
                                        @product.Price.ToString("c", new CultureInfo("en-US"))
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                           asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<section>
    <div class="position-relative">
        <img src="~/images/product/dataAnkaX.png" class="img-fluid w-100" alt="Full Width Image">
        <div class="container">
            <div class="row">
                <div class="col-md-6 p-lg-5 mx-auto my-5 text-primary">
                    <h3 class="fw-normal text mb-3">With transactions from five thousand to fifty million, AnkaX is the #1 marketplace globally and the investment bank for the 99%.</h3>

                </div>
            </div>
        </div>
    </div>
</section>
