@model Product
<div class="card shadom border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
           <input asp-for="Id" hidden/>
              <div class="border p-3 mt-4">

                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Title" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Title" class="ms-2"></label>
                   
                </div>

                
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Description" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Description" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="SiteAge" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="SiteAge" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Location" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Location" class="ms-2"></label>
                  
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Seller" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Seller" class="ms-2"></label>
                   
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Industry" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Industry" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="MonthlyNetProfit" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="MonthlyNetProfit" class="ms-2"></label>
                    
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Price" disabled class="form-control border-0 shadow-sm">
                    <label asp-for="Price" class="ms-2"></label>
                    
                </div>
              
    <div class="row mt-3">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                Back to list
            </a>
        </div>
    </div>



    </div>
</form>

    </div>
</div>





