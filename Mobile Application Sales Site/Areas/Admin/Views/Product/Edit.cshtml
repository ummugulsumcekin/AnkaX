@model Product
<div class="card shadom border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>
    </div>
   

    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Title" class="form-control border-0 shadow-sm">
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

               
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <textarea asp-for="Description" class="form-control border-0 shadow-sm"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="SiteAge" class="form-control border-0 shadow-sm">
                    <label asp-for="SiteAge" class="ms-2"></label>
                    <span asp-validation-for="SiteAge" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Location" class="form-control border-0 shadow-sm">
                    <label asp-for="Location" class="ms-2"></label>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Seller" class="form-control border-0 shadow-sm">
                    <label asp-for="Seller" class="ms-2"></label>
                    <span asp-validation-for="Seller" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Industry" class="form-control border-0 shadow-sm">
                    <label asp-for="Industry" class="ms-2"></label>
                    <span asp-validation-for="Industry" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="MonthlyNetProfit" class="form-control border-0 shadow-sm">
                    <label asp-for="MonthlyNetProfit" class="ms-2"></label>
                    <span asp-validation-for="MonthlyNetProfit" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Price" class="form-control border-0 shadow-sm">
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-success form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Back to list
                        </a>
                    </div>
                </div>



            </div>
        </form>
    </div>
</div>


@section Scripts {
    @Html.Partial("__ValidationScriptsPartial")
}
