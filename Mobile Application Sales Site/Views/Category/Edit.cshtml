@model Category
<form method="post">
    @*<input asp-for="Id" hidden/>*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="ModelOnly"> *@

    </div>
    <div class="mb-3">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DisplayOrder" class="p-0">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <br />
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-outline-primary form-control">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                Back to list
            </a>
        </div>
    </div>

     
     
    </div>
</form>
@section Scripts {
    @Html.Partial("__ValidationScriptsPartial")
}
