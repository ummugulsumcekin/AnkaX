@model Category 
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" class="form-control">

        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control">
        </div>
        <br />
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
        
        
    </div>
</form>