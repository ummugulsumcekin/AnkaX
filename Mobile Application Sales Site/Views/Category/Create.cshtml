@model Category 
<div class="card shadom border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3"></div>
    <div>

    </div>
</div>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="ModelOnly"> *@

        </div>
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <br />
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
        
        
    </div>
</form>
@section Scripts {
    @Html.Partial("__ValidationScriptsPartial")
}