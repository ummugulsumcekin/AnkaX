@model Category 
<div class="card shadom border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3"></div>
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text py-2">Create Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 shadow-sm">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="Name" class="form-control border shadow-sm">
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
          </div>

                <div class="form-floating py-2 col-12 d-flex align-items-center">
                    <input asp-for="DisplayOrder" class="form-control border shadow-sm">
                    <label asp-for="DisplayOrder" class="ms-2"></label>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
          </div>
          <br />
          <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">
                    Back to list
                </a>
            </div>
          </div>
          </div>
        </form>
    </div>
</div>


@section Scripts {
    @Html.Partial("__ValidationScriptsPartial")
}